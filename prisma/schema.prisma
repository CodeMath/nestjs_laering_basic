generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id  String  @id @default(uuid())
  title String  @db.VarChar(20)
  description String  @db.VarChar(100)
  status  String  @db.VarChar(20) @default("PUBLIC")
}
